<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:color="@android:color/holo_blue_dark"></item>
    <item android:state_pressed="true" android:color="@android:color/holo_green_light"/>
    <item android:state_selected="true" android:color="@android:color/holo_red_light"></item>
    <item android:color="@android:color/white" />
</selector>
